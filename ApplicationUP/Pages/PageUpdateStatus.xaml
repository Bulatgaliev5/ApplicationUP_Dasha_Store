<Window x:Class="ApplicationUP.Pages.PageUpdateStatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationUP.Pages"
        mc:Ignorable="d"
        Title="Изменение статуса заказа" Height="400" Width="400">
    <Grid>
        <StackPanel  VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" Margin="15" Text="Выберите статус заказа"/>
            <ComboBox SelectionChanged="TextBoxstatuslist_SelectionChanged"  x:Name="TextBoxstatuslist" Margin="15"   Height="40"/>
            <Border MouseLeftButtonDown="SaveStatus"   Margin="5"   Background="#FF98C8EC" ToolTip="Редактирование данных" >
                <Label  Content="Изменить статус заказа" FontFamily="Times New Roman" FontSize="20"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>
