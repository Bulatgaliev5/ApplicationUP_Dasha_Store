<Window x:Class="ApplicationUP.Pages.PageUpdateStatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationUP.Pages"
        mc:Ignorable="d" MaxWidth="500" MaxHeight="500" MinHeight="400" MinWidth="400"
        Title="Изменение статуса заказа" Height="400" Width="400">
    <Grid>
        <StackPanel  Margin="15" VerticalAlignment="Center">
            <TextBlock FontSize="20" Margin="15" HorizontalAlignment="Center" Text="Выберите статус заказа"/>
            <ComboBox FontSize="20" Margin="15" SelectionChanged="TextBoxstatuslist_SelectionChanged"  x:Name="TextBoxstatuslist"   Height="40"/>
            <Border  Margin="15" MouseLeftButtonDown="SaveStatus"   Style="{DynamicResource BorderBtn2}" >
                <Label HorizontalContentAlignment="Center"  Content="Изменить статус заказа" FontFamily="Times New Roman" FontSize="20"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>
