<Window x:Class="ApplicationUP.Pages.WindowOstavit_Otziv"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationUP.Pages"
        mc:Ignorable="d"
        Title="WindowOstavit_Otziv" Height="450" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Margin="15,0,15,0" Text="Напишите отзыв"/>
            <TextBox Height="200" Margin="15"  x:Name="InputComment"/>
            <TextBlock Margin="15,0,15,0" Text="Выберите оценку"/>
            <ComboBox Margin="15"   SelectionChanged="SelectOzenka" x:Name="InputOzenka"/>
            <Border Margin="5,5,5,5"  HorizontalAlignment="Center" MouseLeftButtonDown="BtnOstavitOtziv" Style="{DynamicResource BorderButton}" >
                <Label Margin="5" HorizontalContentAlignment="Center"  Content="Оставить отзыв" FontFamily="Times New Roman" FontSize="20"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>
